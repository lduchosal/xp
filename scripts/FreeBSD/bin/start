#!/bin/sh

basedir=/usr/local/consonxp
piddir=/var/run/consonxp

protocol="xp --pid-file=${piddir}/protocol.pid --cli-config=cli-xp230.yml term protocol"
homekit="xp --pid-file=${piddir}/homekit.pid --cli-config=cli-xp130.yml term homekit"

cd ${basedir}
. ./venv/bin/activate

cd src
tmux new-session -d -s consonxp "${protocol}" \; new-window "${homekit}"
